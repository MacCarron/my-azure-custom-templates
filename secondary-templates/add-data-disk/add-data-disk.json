{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the your VM"
      }
    },
    "dataDiskName": {
      "type": "string",
      "metadata": {
        "description": "Data Disk Name"
      }
    },
    "dataDiskStorageTier": {
      "type": "string",
      "metadata": {
        "description": "Data Disk Storage Tier"
      }
    }
  },
  "variables": {
    "dataDiskName": "[concat(parameters('vmName'), '-datadisk01')]",
    "dataDiskSnapshotName": "[concat(variables('dataDiskName'), '-pre-enc-snapshot')]"
  },
  "resources": [
    {
      "apiVersion": "2016-04-30-preview",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "storageProfile": {
          "dataDisks": [
            {
              "lun": "0",
              "managedDisk": {
                "storageAccountType": "[parameters('dataDiskStorageTier')]"
              },
              "createOption": "Empty",
              "caching": "ReadWrite",
              "diskSizeGB": "32",
              "name": "[parameters('dataDiskName')]"
            }
          ]
        }
      }
    }//,
    //{
    //  "type": "Microsoft.Compute/snapshots",
    //  "dependsOn": [
    //    "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]"
    //  ],
    //  "name": "[variables('dataDiskSnapshotName')]",
    //  "apiVersion": "2016-04-30-preview",
    //  "location": "[resourceGroup().location]",
    //  "properties": {
    //    "creationData": {
    //      "createOption": "Copy",
    //      "sourceUri": "[resourceId('Microsoft.Compute/disks', parameters('dataDiskName'))]"
    //    },
    //    "accountType": "Standard_LRS"
    //  }
    //}
  ]
}